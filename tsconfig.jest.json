{
  "compilerOptions": {
    "target": "ES2022",
    "useDefineForClassFields": true,
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "CommonJS",
    "types": ["jest", "node", "@testing-library/jest-dom"],
    "skipLibCheck": true,
    "moduleResolution": "node",
    "noEmit": true,
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "allowJs": true,
    "strict": true
  },
  "include": ["src", "setupTests.ts", "**/*.test.ts", "**/*.test.tsx"]
}
